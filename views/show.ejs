<% include ./partials/header.ejs %>
    <div class="userinfo w-full text-white bg-zinc-800">
        <div class="profdets flex flex-col items-center justify-center">
            <div class="relative">
                <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt="">
                </div>
            </div>
            <h1 class="text-2xl font-medium mt-2"><%= user.name %></h1>
            <h3 class="text-medium mt-2">@<%= user.username %></h3>
            <h3 class="text-medium"><%= user.posts.length %> Pins</h3>
            <div class="buttons flex align-center w-full justify-center gap-7">
                <a href="/add" class="px-10 py-4 rounded-full bg-red-700 text-xs font-medium mt-5">Add New Post</a>
            </div>
        </div>
    </div>
    <div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
        <div class="cards flex flex-wrap gap-10">
            <% user.posts.forEach(function(elem){ %>
                <a href="/show/posts" class="card w-32">
                    <div class="w-full h-40 bg-sky-200 rounded-lg overflow-hidden">
                        <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="">
                    </div>
                    <h5 class="mt-2 text-sm"><%= elem.title  %></h5>
                </a>
            <% }) %>
        </div>
    </div>
<% include ./partials/footer.ejs %>